{
  // fonts
  "markdown.preview.fontFamily": "'SF Pro Text'",
  "editor.fontFamily": "'FiraMono Nerd Font Mono', 'SF Pro Text'",
  "debug.console.fontFamily": "'FiraMono Nerd Font Mono', 'SF Pro Text'",
  "terminal.integrated.fontFamily": "'FiraMono Nerd Font Mono', 'SF Pro Text'",
  "editor.fontSize": 13,
  "debug.console.fontSize": 13,
  "markdown.preview.fontSize": 13,
  "terminal.integrated.fontSize": 13,

  // theme
  "oneDarkPro.editorTheme": "oneDarkPro",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.showWelcomeMessage": false,
  "material-icon-theme.files.associations": {
    "stories.tsx": "storybook"
  },
  "material-icon-theme.folders.associations": {
    "types": "typescript",
    "ably": "../../../../../../.vscode/icons/folder-ably",
    "opentok": "../../../../../../.vscode/icons/folder-opentok",
    "vonage": "../../../../../../.vscode/icons/folder-vonage",
  },
  "customizeUI.activityBar": "bottom",
  "customizeUI.font.regular": "SF Pro Text",
  "customizeUI.font.monospace": "FiraMono Nerd Font Mono",
  "customizeUI.stylesheet": {
    ".quick-input-widget": "font-family: monospace !important; font-size: 12px !important;",
    ".search-view .search-widgets-container": "font-family: monospace !important; font-size: 12px !important;",
    ".monaco-list-rows, .monaco-findInput": "font-family: monospace !important; font-size: 12px !important;",
  },
  "explorer.compactFolders": false,
  "workbench.tree.indent": 16,
  "workbench.startupEditor": "none",
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 120],
  "editor.semanticHighlighting.enabled": false,
  "editor.insertSpaces": true,
  "editor.smoothScrolling": true,
  "trailing-spaces.backgroundColor": "rgba(255, 0, 0, 0.2)",
  "trailing-spaces.borderColor": "rgba(255, 100, 100, 0.1)",

  // git
  "gitlens.currentLine.format": "${author} â€¢ ${date}, ${message}",
  "gitlens.currentLine.dateFormat": "YYYY-MM-DD",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,

  // files
  "files.associations": {
    ".dockerignore": "ignore",
    "*.bats": "shellscript",
    ".env": "shellscript",
  },
  "files.watcherExclude": {
    "**/.git/*/**": true,
    "**/node_modules/*/**": true,
    "**/.venv/*/**": true
  },
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "editor.trimAutoWhitespace": true,

  // language (python)
  "python.showStartPage": false,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=120"],
  "[python]": {
    "editor.rulers": [120],
    "editor.tabSize": 4,
    "files.insertFinalNewline": true
  },

  // language (javascript)
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // language (bash)
  "shellcheck.customArgs": ["-x"],
  "shellcheck.ignorePatterns": {
    ".env": true
  },

  // languages (etc)
  "java.configuration.checkProjectSettingsExclusions": false,
  "[html]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[mdx]": {
    "files.trimTrailingWhitespace": false
  },

  // telemetry, etc
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "gitlens.advanced.telemetry.enabled": false,
  "extensions.ignoreRecommendations": true,
  "update.mode": "none",
  "eslint.alwaysShowStatus": true
}
